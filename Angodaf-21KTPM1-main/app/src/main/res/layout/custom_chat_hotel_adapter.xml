<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_8"
            android:backgroundTint="#FFB2A6"
            android:paddingBottom="15dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="ALPHA BIRD NHA TRANG"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotelName"
                android:layout_marginTop="10dp"
                android:text="Số lượng tin nhắn chưa trả lời:"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="10dp"
                android:text="Số lượng tin nhắn trong hộp thoại:"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/waitChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotelName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="0"
                android:textColor="#990000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/totalChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/waitChat"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="4"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/relativeLayout"
            android:layout_marginBottom="-45dp"
            android:background="@drawable/border_7"
            android:backgroundTint="#FFB2A6"
            android:padding="15dp"
            app:srcCompat="@drawable/hotel" />
    </RelativeLayout>

</RelativeLayout>