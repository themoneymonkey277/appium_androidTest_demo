<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border3">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <include
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                layout="@layout/image_square" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="Alleyway Home"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@+id/textView"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/imageView"
                app:srcCompat="@drawable/baseline_location_on_24_normal_color" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="Hồ Chí Minh, Việt Nam"
                android:textColor="#666666"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_below="@+id/textView1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageView"
                app:srcCompat="@drawable/baseline_king_bed_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="Double Room with Private Bath Double Room with Private Bath Double Room with Private Bath Double Room with Private Bath"
                android:textColor="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relativeLayout"
            android:background="#A9A9A9" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận phòng"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="10dp"
                android:text="28 thg 3 2024"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-10dp"
                android:layout_toEndOf="@+id/textView4"
                app:srcCompat="@drawable/baseline_arrow_forward_24" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@+id/line2"
                android:layout_toEndOf="@+id/imageView1"
                android:text="Trả phòng"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/line2"
                android:layout_toEndOf="@+id/imageView1"
                android:text="29 thg 3 2024"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_toStartOf="@+id/textView7"
                android:background="#A9A9A9" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/line3"
                android:text="Đêm  "
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/line2"
                android:text="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/line3"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_toStartOf="@+id/textView9"
                android:background="#A9A9A9" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Phòng"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/line3"
                android:text="1"
                android:textColor="@color/black" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/comment_notdone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:padding="15dp"
        android:background="@drawable/border_13">

        <TextView
            android:id="@+id/point"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/border_12"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/point"
            android:text="&quot;Trải nghiệm tuyệt vời&quot;"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/point"
            android:text="Phục vụ tốt"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dateComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/point"
            android:text="01 thg 4 2024"
            android:textColor="#666666"/>
    </RelativeLayout>

</RelativeLayout>