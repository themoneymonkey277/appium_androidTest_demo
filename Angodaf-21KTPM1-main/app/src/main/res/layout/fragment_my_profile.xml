<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile"
    android:id="@+id/my_profile">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/profileTittle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/profile_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Tài khoản của tôi"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileTittle" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/textView25"/>

    <Button
        android:id="@+id/btn_bookmark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_favorite_border_24"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Danh sách yêu thích"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_person_24_borderless"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Chỉnh sửa thông tin cá nhân"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bookmark"
        app:layout_constraintStart_toStartOf="@+id/btn_bookmark"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <Button
        android:id="@+id/btn_my_comments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_star_outline_24"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Nhận xét của tôi"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_bookmark"
        app:layout_constraintStart_toStartOf="@+id/btn_bookmark"
        app:layout_constraintTop_toBottomOf="@+id/btn_bookmark" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Khách sạn của tôi"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_comments" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button
        android:id="@+id/btn_my_hotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_apartment_24"
        android:drawablePadding="16dp"
        android:drawableTint="@color/black"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Quản lý khách sạn của tôi"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_comments"
        app:layout_constraintStart_toStartOf="@+id/btn_my_comments"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button
        android:id="@+id/btn_add_hotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_domain_add_24"
        android:drawablePadding="16dp"
        android:drawableTint="@color/black"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Thêm khách sạn"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_hotel"
        app:layout_constraintStart_toStartOf="@+id/btn_my_hotel"
        app:layout_constraintTop_toBottomOf="@+id/btn_my_hotel" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Khác"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/btn_my_hotel"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_hotel" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView27"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_chat_bubble_outline_24"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Tin nhắn"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_hotel"
        app:layout_constraintStart_toStartOf="@+id/btn_my_hotel"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <Button
        android:id="@+id/btn_changePw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Đổi mật khẩu"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_hotel"
        app:layout_constraintStart_toStartOf="@+id/btn_my_hotel"
        app:layout_constraintTop_toBottomOf="@+id/btn_chat" />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_logout_24"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:outlineProvider="none"
        android:text="Đăng xuất"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_my_hotel"
        app:layout_constraintStart_toStartOf="@+id/btn_my_hotel"
        app:layout_constraintTop_toBottomOf="@+id/btn_changePw" />

</androidx.constraintlayout.widget.ConstraintLayout>