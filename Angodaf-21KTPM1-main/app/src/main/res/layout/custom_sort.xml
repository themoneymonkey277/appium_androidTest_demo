<!-- res/layout/custom_popup.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:translationZ="8dp"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backToFilter"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_above="@+id/continuousSlider"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="34dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/baseline_x"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:paddingStart="90dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/Blacki"
            android:text="Sắp xếp theo"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Phù hợp nhất"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/checkmark_fit"
            android:layout_width="38dp"
            android:layout_height="44dp"
            app:srcCompat="@android:drawable/checkbox_on_background" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Price_low"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Giá thấp nhất"
            android:textColor="@color/Blacki"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/checkmark_lowest"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:visibility="gone"
            app:srcCompat="@android:drawable/checkbox_on_background" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Price_high"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Giá cao nhất"
            android:textColor="@color/Blacki"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/checkmark_highest"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:visibility="gone"
            app:srcCompat="@android:drawable/checkbox_on_background" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Đánh giá"
            android:textColor="@color/Blacki"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/checkmark_cmt"
            android:layout_width="38dp"
            android:layout_height="44dp"
            android:visibility="gone"
            app:srcCompat="@android:drawable/checkbox_on_background" />


    </LinearLayout>






</LinearLayout>
